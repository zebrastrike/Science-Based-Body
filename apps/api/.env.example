# ============================================================================
# SCIENCE BASED BODY - API CONFIGURATION
# ============================================================================
# For PRODUCTION: Create .env file on server only - NEVER commit secrets!
# Generate secrets: openssl rand -base64 32 (JWT) | openssl rand -hex 32 (encryption)

# ----------------------------------------------------------------------------
# DATABASE (PostgreSQL on Hetzner)
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql://sbb_user:your_password@localhost:5432/science_based_body"
DB_USER="sbb_user"
DB_PASSWORD="generate_secure_password_here"
DB_NAME="science_based_body"

# ----------------------------------------------------------------------------
# REDIS CACHE
# ----------------------------------------------------------------------------
REDIS_PASSWORD="generate_secure_password_here"

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
# JWT Secret - openssl rand -base64 32
JWT_SECRET="your-jwt-secret-min-32-chars"
JWT_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="7d"

# PII Encryption Key (64 hex chars) - openssl rand -hex 32
ENCRYPTION_KEY="your64characterhexencryptionkeyhere1234567890abcdef12345678"

# ----------------------------------------------------------------------------
# CORS & URLS
# ----------------------------------------------------------------------------
CORS_ORIGINS="https://sciencebasedbody.com,https://www.sciencebasedbody.com"
FRONTEND_URL="https://sciencebasedbody.com"

# ----------------------------------------------------------------------------
# SHIPPO SHIPPING
# ----------------------------------------------------------------------------
SHIPPO_API_KEY=""
SHIPPO_RETURN_NAME="Science Based Body"
SHIPPO_RETURN_STREET="Your Street Address"
SHIPPO_RETURN_CITY="City"
SHIPPO_RETURN_STATE="ST"
SHIPPO_RETURN_ZIP="12345"
SHIPPO_RETURN_COUNTRY="US"
SHIPPO_RETURN_PHONE=""

# ----------------------------------------------------------------------------
# EPICOR PROPELLO PAYMENTS (when ready)
# ----------------------------------------------------------------------------
EPICOR_PROPELLO_ENABLED="false"
EPICOR_PROPELLO_SANDBOX="true"
EPICOR_PROPELLO_API_URL="https://api.epicorpropello.com/v1"
EPICOR_PROPELLO_API_KEY=""
EPICOR_PROPELLO_MERCHANT_ID=""
EPICOR_PROPELLO_WEBHOOK_SECRET=""

# ----------------------------------------------------------------------------
# FALLBACK PAYMENT METHODS
# ----------------------------------------------------------------------------
PAYMENT_ZELLE_EMAIL="payments@sciencebasedbody.com"
PAYMENT_CASHAPP_TAG="$ScienceBasedBody"

# ----------------------------------------------------------------------------
# MAILGUN EMAIL (when ready - leave empty to disable)
# ----------------------------------------------------------------------------
MAILGUN_API_KEY=""
MAILGUN_DOMAIN="mg.sciencebasedbody.com"
MAILGUN_FROM_EMAIL="noreply@sciencebasedbody.com"
MAILGUN_FROM_NAME="Science Based Body"
ADMIN_EMAIL="admin@sciencebasedbody.com"

# ----------------------------------------------------------------------------
# CLOUDFLARE R2 STORAGE
# ----------------------------------------------------------------------------
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="sbb-files"
R2_PUBLIC_URL="https://files.sciencebasedbody.com"

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
NODE_ENV="production"
PORT=3001

# Compliance
MINIMUM_AGE=21

# Rate limiting (per IP)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

