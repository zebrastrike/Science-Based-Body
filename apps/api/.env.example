# ============================================================================
# SCIENCE BASED BODY - API CONFIGURATION
# ============================================================================
# Copy this file to .env.local and fill in your values

# ----------------------------------------------------------------------------
# DATABASE (Hetzner)
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@your-hetzner-server.com:5432/sciencebasedbody"

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------------------------------------------
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="7d"

# ----------------------------------------------------------------------------
# EPICOR PROPELLO PAYMENTS
# ----------------------------------------------------------------------------
EPICOR_PROPELLO_ENABLED="true"
EPICOR_PROPELLO_SANDBOX="true"
EPICOR_PROPELLO_API_URL="https://api.epicorpropello.com/v1"
EPICOR_PROPELLO_API_KEY=""
EPICOR_PROPELLO_MERCHANT_ID=""
EPICOR_PROPELLO_WEBHOOK_SECRET=""

# ----------------------------------------------------------------------------
# FALLBACK PAYMENT METHODS
# ----------------------------------------------------------------------------
PAYMENT_ZELLE_EMAIL="payments@sciencebasedbody.com"
PAYMENT_CASHAPP_TAG="$ScienceBasedBody"

# ----------------------------------------------------------------------------
# MAILGUN EMAIL
# ----------------------------------------------------------------------------
MAILGUN_API_KEY=""
MAILGUN_DOMAIN="mg.sciencebasedbody.com"
MAILGUN_FROM_EMAIL="noreply@sciencebasedbody.com"
MAILGUN_FROM_NAME="Science Based Body"
ADMIN_EMAIL="admin@sciencebasedbody.com"

# ----------------------------------------------------------------------------
# CLOUDFLARE R2 STORAGE
# ----------------------------------------------------------------------------
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="sbb-files"
R2_PUBLIC_URL="https://files.sciencebasedbody.com"

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Compliance
MINIMUM_AGE=18

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ----------------------------------------------------------------------------
# OPTIONAL: ANALYTICS & MONITORING
# ----------------------------------------------------------------------------
# SENTRY_DSN=""
# GOOGLE_ANALYTICS_ID=""
